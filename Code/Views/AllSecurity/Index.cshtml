@model IEnumerable<Commerce.Models.NewTrans>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />

<link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/datatables.net-buttons-bs-4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<div class="container" style="margin-top:2%">
<form method="post" asp-action="Index" asp-controller="AllSecurity">
<div class="row">

<div class="col-lg-4 col-sm-6">
    <div class="form-group">
        <div class="form-control-wrap">
        Enter  start Date
            <input type="date" name="startdate" class="form-control form-control-xl" >

        </div>
    </div>
</div>
<div class="col-lg-4 col-sm-6">
    <div class="form-group">
        <div class="form-control-wrap">
              Enter End Date
            <input type="date" name="Enddate" class="form-control form-control-xl">
            

        </div>
    </div>
</div>
<div class="col-lg-4 col-sm-6">
    <div class="form-group">
        <div class="form-control-wrap">
              <br />
            <button type="submit" style="margin-top:10px;" class="btn btn-primary">Submit</button>
            

        </div>
    </div>
</div>
@*<div class="col-lg-3 col-sm-4">
    <div class="form-group">
        <div class="form-control-wrap">
              <br />
              <a href="AllSecurity/NewTransaction" style="margin-top:10px;color:white;" class="btn btn-primary">New Transaction</a>
       
            

        </div>
    </div>
</div>*@
</div> 
</form>
</div>
@if ( ViewBag.dat!=null)
{


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    @*   <h4 class="card-title">Buttons example</h4>
                        <p class="card-title-desc">
                        The Buttons extension for DataTables
                        provides a common set of options, API methods and styling to display
                        buttons on a page that will interact with a DataTable. The core library
                        provides the based framework upon which plug-ins can built.
                        </p>*@

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 98%;">
                        <thead>
                            <tr>
                                <th>Transaction ID</th>
                                <th>Account No</th>
                                <th>Transaction type</th>
                                <th>Amount</th>
                                <th>Balance</th>
                                <th>Processing Date</th>
                                <th>Description</th>
                                <th>Location</th>

                            </tr>
                        </thead>


                        <tbody>
       @foreach (var item in  ViewBag.dat)
                            {
                                <tr>
                    <td>@item.TransactionId</td>
                    <td>@item.AccountNo</td>
                    <td>@item.TransactionType</td>
                     <td>@item.Amount</td>
                     <td>@item.Balance</td>
                     <td>@item.ProcessingDate</td>
                    <td>@item.Description</td>
                    <td>@item.Location</td>

        

                                </tr>
                            } 

                    </tbody>
                </table>
            </div>
        </div>
    </div> 
    </div>
    }